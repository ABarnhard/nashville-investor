  #main-nav.navbar.navbar-inverse.bs-docs-nav(role='banner', ng-controller='NavCtrl')
    .container
      .navbar-header.responsive-logo
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Nashville Investor
          // MLF NOTE: INSERT LOGO URL HERE
