          li: a(href='/') Home
          li: a(href='/#/register') Register
          li: a(href='/#/login') Login
        ul.nav.navbar-nav.navbar-right.responsive-nav(ng-show='email')
          li: a(href='/') Home
          li: a(href='/#/logout') {{email}}

